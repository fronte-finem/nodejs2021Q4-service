{
  "name": "nodejs-2021q4-service",
  "description": "REST service â€” education project from RS School for course Nodejs 2021Q4",
  "private": true,
  "engines": {
    "node": ">=16.0.0 <17"
  },
  "type": "commonjs",
  "scripts": {
    "start": "npm run docker:start",
    "docker:start": "docker-compose up --build",
    "dev:watch": "nodemon --exec \"npm run dev:start\"",
    "dev:start": "npx ts-node -r dotenv/config src/server.ts",
    "prod": "npm run prod:build && npm run prod:start",
    "prod:start": "node -r dotenv/config ./dist/server.js",
    "prod:build": "npm run lint && tsc",
    "lint": "eslint --ext .js,.ts --fix src/",
    "test": "cross-env DEBUG=rs:* jest --testMatch \"<rootDir>/test/e2e/test/*.test.js\" --noStackTrace --runInBand",
    "test:auth": "cross-env DEBUG=rs:* TEST_MODE=auth jest --noStackTrace"
  },
  "nodemonConfig": {
    "ext": "*",
    "watch": [
      "src",
      ".env"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./test/setup.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint"
    ]
  },
  "dependencies": {
    "cross-env": "7.0.3",
    "dotenv": "10.0.0",
    "fastify": "^3.25.2",
    "fastify-cors": "^6.0.2",
    "fastify-sensible": "^3.1.2",
    "fastify-swagger": "^4.13.0",
    "fluent-json-schema": "^3.0.1",
    "pg": "^8.7.1",
    "pino": "^7.6.1",
    "pino-pretty": "^7.3.0",
    "pretty-data": "^0.40.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.41"
  },
  "devDependencies": {
    "@types/node": "^16.11.17",
    "@types/pg": "^8.6.3",
    "@types/pretty-data": "^0.40.0",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "chai": "4.3.4",
    "debug": "4.3.2",
    "dirty-chai": "2.0.1",
    "eslint": "8.2.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "husky": "^4.3.8",
    "jest": "27.3.1",
    "lint-staged": "12.0.3",
    "nodemon": "2.0.15",
    "prettier": "2.4.1",
    "supertest": "6.1.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
