{
  "name": "nodejs-2021q4-service",
  "description": "REST service â€” education project from RS School for course Nodejs 2021Q4",
  "private": true,
  "engines": {
    "node": ">=16.0.0 <17"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "prisma:build": "prisma migrate dev",
    "build": "npm run prisma:build && nest build",
    "start": "npm run prisma:build && nest start --exec \"node -r dotenv/config\"",
    "start:dev": "npm run prisma:build && nest start --watch --exec \"node -r dotenv/config\"",
    "start:debug": "npm run prisma:build && nest start --debug --watch --exec \"node -r dotenv/config\"",
    "start:prod": "npm run build && cross-env NODE_ENV=production node -r dotenv/config dist/src/main.js",
    "lint": "eslint --ext .js,.ts --fix src/",
    "test": "cross-env DEBUG=rs:* jest --testMatch \"<rootDir>/test/e2e/test/*.test.js\" --noStackTrace --runInBand",
    "test:auth": "cross-env DEBUG=rs:* TEST_MODE=auth jest --noStackTrace"
  },
  "dependencies": {
    "@nestjs/common": "^8.2.6",
    "@nestjs/config": "^1.1.6",
    "@nestjs/core": "^8.2.6",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/mapped-types": "^1.0.1",
    "@nestjs/passport": "^8.1.0",
    "@nestjs/platform-express": "^8.2.6",
    "@nestjs/platform-fastify": "^8.2.6",
    "@nestjs/swagger": "^5.2.0",
    "@prisma/client": "^3.9.1",
    "bcrypt": "^5.0.1",
    "chalk": "4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cli-highlight": "^2.1.11",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "fast-redact": "^3.1.0",
    "fastify-multer": "^2.0.2",
    "fastify-swagger": "^4.13.1",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pretty-data": "^0.40.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.2",
    "safe-stable-stringify": "^2.3.1",
    "swagger-ui-express": "^4.3.0",
    "winston": "^3.5.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.0",
    "@nestjs/schematics": "^8.0.5",
    "@nestjs/testing": "^8.2.6",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/fast-redact": "^3.0.1",
    "@types/jest": "^27.4.0",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.11.21",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/pretty-data": "^0.40.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "chai": "^4.3.6",
    "debug": "^4.3.3",
    "dirty-chai": "^2.0.1",
    "eslint": "^8.8.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.3.3",
    "prettier": "^2.5.1",
    "prisma": "^3.9.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./test/setup.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint"
    ]
  },
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "ts-node prisma/seed.ts"
  }
}
