{
  "name": "nodejs-2021q4-service",
  "description": "REST service â€” education project from RS School for course Nodejs 2021Q4",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "npm run watch:build",
    "watch:build": "nodemon --watch src --exec npm run start:dev:build",
    "watch:loader": "nodemon --watch src --exec npm run start:dev:loader",
    "start:dev:build": "npm run build:dev && node -r dotenv/config ./dist/bundle.js",
    "start:dev:loader": "node -r dotenv/config --experimental-loader esbuild-node-loader ./src/server.ts",
    "build:dev": "cross-env NODE_ENV=development node esbuild.config.mjs",
    "start:prod": "npm run lint && tsc && npm run build:prod",
    "build:prod": "cross-env NODE_ENV=production node esbuild.config.mjs",
    "lint": "eslint --ext .js,.ts --fix src/",
    "test": "cross-env DEBUG=rs:* jest --testMatch \"<rootDir>/test/e2e/test/*.test.js\" --noStackTrace --runInBand",
    "test:auth": "cross-env DEBUG=rs:* TEST_MODE=auth jest --noStackTrace"
  },
  "keywords": [
    "rs",
    "school",
    "rest",
    "node",
    "express",
    "autotest",
    "starter"
  ],
  "engines": {
    "node": ">=16.0.0 <17"
  },
  "nodemonConfig": {
    "ext": "*.ts",
    "exec": "npx ts-node --experimental-specifier-resolution=node src/server.ts"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./test/setup.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint"
    ]
  },
  "dependencies": {
    "@mgcrea/fastify-request-logger": "^0.5.2",
    "@mgcrea/pino-pretty-compact": "^0.5.0",
    "cross-env": "7.0.3",
    "dotenv": "10.0.0",
    "fastify": "^3.24.1",
    "fastify-cors": "^6.0.2",
    "fastify-sensible": "^3.1.2",
    "fastify-swagger": "^4.12.6",
    "fluent-json-schema": "^3.0.1",
    "openapi-types": "^10.0.0",
    "pino-pretty": "^7.2.0"
  },
  "devDependencies": {
    "@types/node": "^16.11.11",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "chai": "4.3.4",
    "debug": "4.3.2",
    "dirty-chai": "2.0.1",
    "esbuild": "^0.14.2",
    "esbuild-node-loader": "^0.6.3",
    "eslint": "8.2.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "husky": "^4.3.8",
    "jest": "27.3.1",
    "lint-staged": "12.0.3",
    "nodemon": "2.0.15",
    "prettier": "2.4.1",
    "supertest": "6.1.6",
    "typescript": "^4.5.2"
  }
}
