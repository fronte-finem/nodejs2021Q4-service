{
  "include": ["src", "db"],
  "exclude": ["dist"],
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",
    "lib": ["ESNext"],

    /* Modules */
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,

    /* Emit */
    "noEmit": false,
    "outDir": "dist",
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "incremental": true,

    /* Type Checking */
    "strict": true,
    "noImplicitReturns": true,

    /* Extensions */
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "ts-node": {
    "transpileOnly": true
  }
}
