{
  "include": ["src/**/*"],
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",
    "lib": ["ESNext"],

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,

    /* Emit */
    "noEmit": true,

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "~src/*": ["src/*"]
    },
    "resolveJsonModule": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,

    /* Completeness */
    "skipLibCheck": true,

    /* JavaScript Support */
    "allowJs": true,
    "checkJs": true
  }
}
