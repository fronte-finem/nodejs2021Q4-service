# ~~~ Set app config ~~~
USE_FASTIFY=true
PORT=4000
# Log Levels: verbose, debug, info, warn, error
LOG_LEVEL=debug
JWT_KEY=app_jwt_key
JWT_EXPIRES_IN=24h  # expressed in seconds or a string describing a time span (https://github.com/vercel/ms). Eg: 60, 10h, 7d, 2 days

# ~~~ Set docker & docker-compose specific config ~~~
COMPOSE_PROJECT_NAME=fronte-finem_nodejs-2021q4

# ~~~ Set tests config ~~~
#TEST_MODE=auth

# ~~~ Set database config ~~~
DB_HOST=localhost
DB_PORT=5000
DB_NAME=db-app
DB_USER=db-app-admin
DB_PASSWORD=db_password

# ~~~ Misc ~~~
# force colorize output
FORCE_COLOR=3
